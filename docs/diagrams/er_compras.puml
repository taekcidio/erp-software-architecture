entity "Producto" as Producto {
  * id_producto : int <<PK>>
  --
  * nombre : varchar
  descripcion : text
  unidad_medida : varchar
  categoria : varchar
}

entity "Proveedor" as Proveedor {
  * id_proveedor : int <<PK>>
  --
  * razon_social : varchar
  contacto : varchar
  telefono : varchar
  email : varchar
}

entity "Producto_Proveedor" as PP {
  * id_producto : int <<FK>>
  * id_proveedor : int <<FK>>
  --
  precio_unitario : decimal
}

entity "Orden_Compra" as OC {
  * id_orden : int <<PK>>
  --
  fecha : date
  estado : varchar
  id_proveedor : int <<FK>>
}

entity "Orden_Compra_Detalle" as OCD {
  * id_orden : int <<FK>>
  * id_producto : int <<FK>>
  --
  cantidad : int
  precio_unitario : decimal
}

Producto "1" -- "0..*" PP
Proveedor "1" -- "0..*" PP
Proveedor "1" -- "0..*" OC
OC "1" -- "1..*" OCD
Producto "1" -- "0..*" OCD

@enduml
